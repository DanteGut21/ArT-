<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Beige"
    android:orientation="vertical"
    tools:context=".Carrito">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <TextView
            android:id="@+id/tvSubTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Subtotal: ****" />
        <Button
            android:id="@+id/btnPPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/GreenLeave"
            android:textColor="@color/Brown"
            android:textSize="16sp"
            android:padding="8dp"
            android:text="Proceder con el pago" />

        <Button
            android:id="@+id/btnPEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/GreenLeave"
            android:padding="8dp"
            android:textColor="@color/Brown"
            android:text="Eliminar productos"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
