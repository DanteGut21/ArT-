<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Principal">
    <!--Contenedor principal-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Beige"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <ImageView
                android:id="@+id/teaImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/jazmin" />
            <TextView
                android:id="@+id/teaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Té Floreciente Jazmín"
                android:paddingLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/GreenLeave"
                android:textSize="30dp" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- TextView para el título del diálogo -->
                <!--                                                      xtAppearance="@style/TextAppearance.AppCompat.Medium" />-->
                <!-- TextView para el cuerpo del diálogo -->
                <TextView
                    android:id="@+id/dialogBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Hecho a mano enrollando las hojas con flores de jazmín en orbes de
                loto, un sabor dulce y refrescante de cuerpo completo, y un agradable
                retrogusto floral de larga duración, lleno de antioxidantes para aliviar el
                estrés y vigorizar la juventud."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--        <Button-->
        <!--            android:id="@+id/BTNAgregar"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="AGREGAR">-->
        <!--        </Button>-->
    </LinearLayout>
</FrameLayout>
