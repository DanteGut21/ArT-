<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Beige"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Producto">

    <!-- Imagen y nombre del té -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/te" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="16dp"
            android:text="Nombre del té"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Personalización pedido -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Personalización pedido"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/borde"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción 1" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción 2" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción 3" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción 4" />
    </LinearLayout>
    <!-- Botón de realizar pedido -->
    <Button
        android:id="@+id/btnPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bot_cua_greendark"
        android:backgroundTint="@color/GreenDark"
        android:drawableTint="@color/GreenDark"
        android:padding="16dp"
        android:text="Pagar pedido"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Brown"
        android:backgroundTint="@color/Brown"
        android:drawableTint="@color/Brown"
        android:padding="16dp"
        android:text="Carrito de compras"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>
