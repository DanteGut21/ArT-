<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/Beige">

        <!-- Sección del usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingEnd="8dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"/>
        </LinearLayout>

        <!-- Opciones del usuario -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:paddingBottom="16dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/GreenMint"
                android:text="Opción usuario"
                android:textColor="@android:color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/GreenMint"
                android:text="Opción usuario"
                android:textColor="@android:color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/GreenMint"
                android:text="Opción usuario"
                android:textColor="@android:color/white"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/GreenMint"
                android:text="Opción usuario"
                android:textColor="@android:color/white"/>
        </GridLayout>

        <!-- Órdenes anteriores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ordenes anteriores"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver más"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:paddingBottom="16dp">

            <!-- Repetir para cada orden anterior -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:src="@drawable/te"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:src="@drawable/te"/>
        </GridLayout>

        <!-- Botón para consultar pedido -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Brown"
            android:text="Consulta tu pedido"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/map"
            android:padding="16dp"/>
    </LinearLayout>
</FrameLayout>
