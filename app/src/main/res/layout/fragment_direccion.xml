<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bordeitem"
    android:orientation="vertical"
    android:padding="28dp">

    <EditText
        android:id="@+id/calleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calle" />

    <EditText
        android:id="@+id/numeroExteriorEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número Exterior" />

    <EditText
        android:id="@+id/codigoPostalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código Postal" />

    <EditText
        android:id="@+id/estadoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado" />

    <EditText
        android:id="@+id/ciudadEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ciudad" />

    <EditText
        android:id="@+id/coloniaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Colonia" />

    <EditText
        android:id="@+id/telefonoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teléfono" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Dirección" />

</LinearLayout>
